# .env.example - Copy thành .env và điền giá trị thực
# LABA ERP Environment Configuration

# ==========================================
# BẮT BUỘC (Required)
# ==========================================

# Database - PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://laba_user:laba_password_2024@localhost:5432/laba_erp"

# JWT Secret - PHẢI thay đổi trong production!
# Tạo random: openssl rand -base64 32
# Hoặc: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"

# Token Expiration (increased for development)
ACCESS_TOKEN_EXPIRES_IN="1h"
REFRESH_TOKEN_EXPIRES_IN="30d"

# ==========================================
# PUBLIC (Truy cập được ở client)
# Biến có prefix NEXT_PUBLIC_ sẽ được bundle vào client
# ==========================================

NEXT_PUBLIC_APP_NAME="LABA ERP"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==========================================
# EMAIL - Resend (cho Email Verification)
# Đăng ký tại: https://resend.com
# ==========================================

RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="LABA ERP <onboarding@resend.dev>"

# ==========================================
# RATE LIMITING - Upstash Redis
# Đăng ký tại: https://console.upstash.com
# ==========================================

UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxxxxxxxxxxxxxxx"

# ==========================================
# TÙY CHỌN - Cloud Storage (Phase 2+)
# Dùng để upload ảnh hóa đơn, chứng từ
# ==========================================

# Cloudflare R2 hoặc AWS S3
# STORAGE_ACCESS_KEY=""
# STORAGE_SECRET_KEY=""
# STORAGE_BUCKET=""
# STORAGE_ENDPOINT=""

# ==========================================
# TASK 8: GOOGLE CLOUD VISION (OCR)
# Dùng để scan hóa đơn tự động
# ==========================================

GOOGLE_CLOUD_API_KEY="AIzaSy..."

# ==========================================
# TASK 8: CLOUDFLARE R2 (Storage)
# Dùng để lưu ảnh hóa đơn
# ==========================================

R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_ENDPOINT="https://<ACCOUNT_ID>.r2.cloudflarestorage.com"
R2_PUBLIC_URL=""

# ==========================================
# DEVELOPMENT ONLY
# ==========================================

# Skip env validation (chỉ dùng khi build static)
# SKIP_ENV_VALIDATION=true
